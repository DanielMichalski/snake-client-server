<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="serverConnection" class="pl.bestsoft.snake.rmi.server.RmiServerConnection"/>

    <bean class="org.springframework.remoting.rmi.RmiServiceExporter">
        <property name="serviceName" value="serverConnection"/>
        <property name="serviceInterface" value="pl.bestsoft.snake.rmi.common.IRmiServerConnection"/>
        <property name="service" ref="serverConnection"/>
        <property name="registryPort" value="1096"/>
    </bean>

</beans>